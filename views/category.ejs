<%- include('header'); -%>
<div class="show-path">
    <p><a href="/">Home</a> > <%= category %></p>
</div>
<!-- <%- include('content'); -%> -->


<section class="home-content">

    <div class="row">
        <div class="col-lg-4">
            <div class="story">
                <div class="heading">
                    Top stories
                </div>

                <div class="row">

                    <% posts.forEach((post)=>{ %>
                    <%   if(post.type=="post-1"){ %>
                    <div class="post-1 col-lg-12 col-md-6 col-sm-6">
                        <p> <%=post.title %> <a href="/<%=category %>/<%=post.title %>" class="read-link">read full
                                article</a></p>
                        <img src="<%= post.img %>" alt="">

                    </div>
                    <hr>
                    <% }}); %>
                </div>

            </div>
        </div>
        <div class="col-lg-2">
            <div class="top-post">

                <% posts.forEach((post)=>{ %>
                <%   if(post.type=="post-2"){ %>
                <div class="post-2">
                    <a href="/<%= category %>/<%= post.title%>"><img src="<%= post.img %>" alt=""></a>
                    <p><%= post.title %></p>
                </div>
                <% }}); %>
            </div>
        </div>

    </div>

    <div class="top-pick">
        <div class="heading">
            TOP PICKS
        </div>
        <div class="pick-posts">

            <div class="row justify-content-around">

                <% posts.forEach((post)=>{ %>
                <%   if(post.type=="post-3"){ %>
                <div class="post-3">
                    <a href="/<%= category %>/<%= post.title%>">
                        <img src="<%= post.img %>" alt="">
                        <div class="post-3-content">
                            <% if(post.title !="Nothing Post"){ %>
                            <span class="tag"><%= category%></span>
                            <% } %>
                            <p><%= post.title%></p>
                        </div>
                    </a>
                </div>
                <% }}); %>

            </div>
        </div>
    </div>

</section>







<%- include('footer'); -%>