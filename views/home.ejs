<%- include('header'); -%>
<section class="trend">

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-pause="false">
        <div class="carousel-inner">


            <div class="carousel-item active">
                <img class="d-block w-100" src="../css/image/sport.jpg" alt="sport slide">
                <div class="trend-title">
                    <p>#bollywood</p>
                    <h2>Lorem ipsum dolor sit amet consectetur.</h2>
                </div>
            </div>

            <% trend.forEach((post)=>{ %>

            <div class="carousel-item">
                <img class="d-block w-100" src="<%= post.img %>" alt="news slide">
                <div class="trend-title">
                    <p>#<%= post.category %></p>
                    <a href="/<%= post.category %>/<%= post.title %>">
                        <h2><%= post.title %></h2>
                    </a>
                </div>
            </div>
            <% }); %>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</section>


